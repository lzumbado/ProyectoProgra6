@page
@model WebApp.Pages.Cliente.GridModel
@{ }

<div class="container-fluid">

    <div class="card">
        <div class="card-header">
            Cliente
        </div>
        <div class="card-body">

            <a class="btn btn-primary" asp-page="Edit">
                <i class='bx bxs-add-to-queue'></i>
            </a>

            <div class="row">
                <div class="col-12">
                    <table id="GridView" class="table table-bordered table table-striped table table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Cedula</th>
                                <th>Nombre</th>
                                <th>Primer Apellido</th>
                                <th>Segundo Apellido</th>
                                <th>Direccion</th>
                                <th>Telefono</th>
                                <th>Fecha de Nacimiento</th>
                            </tr>
                        </thead>
                        <tboby>
                            @foreach (var item in Model.GridList)
                            {
                            <tr>
                                <td>@item.IdCliente</td>
                                <td>@item.Cedula</td>
                                <td>@item.Nombre</td>
                                <td>@item.Apellido1</td>
                                <td>@item.Apellido2</td>
                                <td>@item.Direccion</td>
                                <td>@item.Telefono</td>
                                <td>@item.FechaNacimiento.ToString("dd/MM/yyyy")</td>                                
                                <td>
                                    <a class="btn btn-primary" asp-page="Edit" asp-route-id="@item.IdCliente"><i class='bx bx-edit-alt'></i></a>

                                    <button type="button" class="btn btn-danger" onclick="ClienteGrid.OnClickEliminar(@item.IdCliente)">
                                        <i class='bx bx-trash'></i>
                                    </button>
                                </td>
                            </tr>}
                        </tboby>
                    </table>

                </div>
            </div>



        </div>
    </div>


</div>

@section Scripts{

    <script defer src="~/App/Cliente/Grid.js"></script>
}